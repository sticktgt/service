{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "chart": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "version",
                "description"
            ]
        },
        "subjectArea": {
            "type": "string"
        },
        "sourceMetafileRepo": {
            "type": "string",
            "format": "uri"
        },
        "sourceMetafileBranch": {
            "type": "string"
        },
        "sourceMetafileName": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "environment": {
            "type": "string"
        },
        "deploymentName": {
            "type": "string"
        },
        "metadata": {
            "type": "object",
            "properties": {
                "labels": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "labels"
            ]
        },
        "deploy": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": [
                        "Always",
                        "IfNotPresent",
                        "Never"
                    ]
                },
                "schedule": {
                    "type": "string"
                },
                "startingDeadlineSeconds": {
                    "type": "integer"
                },
                "concurrencyPolicy": {
                    "type": "string",
                    "enum": [
                        "Allow",
                        "Forbid",
                        "Replace"
                    ]
                },
                "successfulJobsHistoryLimit": {
                    "type": "integer"
                },
                "failedJobsHistoryLimit": {
                    "type": "integer"
                },
                "backoffLimit": {
                    "type": "integer"
                },
                "env": {
                    "type": "object",
                    "additionalProperties": true
                },
                "volumeMounts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "mountPath": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "mountPath"
                        ]
                    }
                },
                "volumes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "emptyDir": {
                                "type": "object",
                                "properties": {
                                    "medium": {
                                        "type": "string"
                                    },
                                    "sizeLimit": {
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "name"
                        ]
                    }
                }
            },
            "required": [
                "env",
                "schedule",
                "image"
            ]
        },
        "code": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "string"
                },
                "args": {
                    "type": "string"
                },
                "env": {
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "required": [
                "env",
                "command",
                "args"
            ]
        }
    },
    "required": [
        "chart",
        "subjectArea",
        "sourceMetafileRepo",
        "sourceMetafileBranch",
        "sourceMetafileName",
        "namespace",
        "environment",
        "deploy",
        "code"
    ],
    "additionalProperties": false
}