{
  "environment": "TEST",
  "apiVersion": "machinelearning.seldon.io/v1",
  "chart": {
    "name": "test-model",
    "version": "0.1.0",
    "description": "Test Seldon deployment chart"
  },
  "deploymentName": "seldon-model",
  "namespace": "default",
  "predictors": [
    {
      "name": "example",
      "componentSpec": {
        "containers": [
          {
            "name": "classifier",
            "image": "seldonio/mock_classifier:1.16.0-dev",
            "imagePullPolicy": "IfNotPresent",
            "resources": {
              "requests": {
                "cpu": "0.5"
              }
            }
          }
        ],
        "kedaSpec": {
          "pollingInterval": 15,
          "minReplicaCount": 1,
          "maxReplicaCount": 5,
          "triggers": [
            {
              "type": "prometheus",
              "metadata": {
                "serverAddress": "http://seldon-monitoring-prometheus.seldon-monitoring.svc.cluster.local:9090",
                "metricName": "access_frequency",
                "threshold": "10",
                "query": "rate(seldon_api_executor_client_requests_seconds_count{model_name=\"classifier\"}[1m])"
              }
            }
          ]
        },
        "pdbSpec": {
          "minAvailable": "90%"
        }
      },
      "graph": {
        "name": "classifier",
        "type": "MODEL",
        "endpoint": {
          "type": "REST"
        },
        "children": []
      }
    }
  ]
}
